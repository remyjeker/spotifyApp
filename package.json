{
  "name": "spotify-server-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "body-parser": "^1.18.3",
    "concurrently": "^4.1.0",
    "cookie-parser": "^1.4.4",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "node-env-run": "^3.0.2",
    "path": "^0.12.7",
    "querystring": "^0.2.0",
    "request": "^2.88.0"
  },
  "scripts": {
    "client": "cd client && npm run start",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "prepare-client": "cd client && npm install && npm run build",
    "server": "nodemon server.js",
    "start": "npm run prepare-client && npm run server"
  }
}
